@Styles.Render("~/bundles/bootstrap_toggle_css")

@using (Ajax.BeginForm("AddTweet", "Twitter", null,
    new AjaxOptions
    {
        OnFailure = "HandleError(xhr,'tw_post')",
        HttpMethod = "Post",
        UpdateTargetId = "tw_post_response",
        LoadingElementId = "tw_post_response_loading",
        InsertionMode = InsertionMode.Replace
    },
    new
    {
        id = "tw_post_form",
        @class = "form",
        role = "form"
    }))
{
    <div id="tw_post_response_loading"></div>

    <div id="tw_post_response" class="form-group text-success"></div>

    <div class="panel panel-default">

        <div class="panel-heading">
            <strong>New Tweet</strong>
        </div>

        <div class="panel-body">           
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <textarea name="tweetBody" class="form-control" rows="2" style="max-width: 100%" placeholder="Tweet body..."></textarea>
                    </div>
                </div>
            </div>

            <input name="privacy" type="hidden" value="EVERYONE"/>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-link"></i></span>
                            <input name="tweetLink" class="form-control" type="text" placeholder="Add URL link..." style="width: 100%"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group input-group">
                        <div class="input-group">
                            <button type="submit" class="btn btn-sm btn-success">Post</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}

@Scripts.Render("~/bundles/bootstrap_toggle_js")