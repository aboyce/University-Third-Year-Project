@model IEnumerable<TicketManagement.Models.ApplicationUser>
@using System.Web.Optimization
@{
    Layout = "";
 }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcom - Ticket Managment</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <img src="~/Content/Images/Wallpapers/bg_mountains.jpg" id="bg_image" alt="Mountain Wallpaper">

    <style>
        #bg_image { position: fixed; top: 0; left: 0; }
        .bg_image_width { width: 100%; }
        .bg_image_height { height: 100%; }
    </style>

    <div class="container body-content">
        
        <div class="row">
            <div class="col-md-2">
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal_SignUp">Sign Up</button>
            </div>
        </div>


        <div id="modal_SignUp" class="modal fade" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Sign Up</h4>
                    </div>
                    <div class="modal-body">
                        <p>One fine body&hellip;</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>





        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ticket Management</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Site/Welcome/welcome.js")
</body>
</html>
