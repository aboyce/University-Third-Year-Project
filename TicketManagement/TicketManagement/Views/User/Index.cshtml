@model TicketManagement.Models.Entities.ApplicationUser

@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout_Standard.cshtml";
}

<h2>My Account</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    string archived = @Model.User.IsArchived ? "True" : "False";
    string teamLeader = @Model.User.IsTeamLeader ? "True" : "False";

    <div class="form-horizontal">
        <h3>Edit</h3>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                <input class="form-control" type="text" placeholder="@Model.UserName" disabled="disabled">
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.FirstName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.User.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.LastName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.User.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                <input class="form-control" type="text" placeholder="@Model.Email" disabled="disabled">
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.IsArchived, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                <input class="form-control" type="text" placeholder="@archived" disabled="disabled">
                @Html.ValidationMessageFor(model => model.User.IsArchived, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.IsTeamLeader, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                <input class="form-control" type="text" placeholder="@teamLeader" disabled="disabled">
                @Html.ValidationMessageFor(model => model.User.IsTeamLeader, "", new { @class = "text-danger" })
            </div>
        </div>

        @if (Model.User.Team != null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.User.Team.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="@Model.User.Team.Name" disabled="disabled">
                    @Html.ValidationMessageFor(model => model.User.Team.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <label class="control-label col-md-4">Team Name</label>
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="Not in a team" disabled="disabled">
                </div>
            </div>

        }

        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", "Organisations", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h3>Change Password</h3>
            <hr />
            @Html.ActionLink("Change Password", "ChangePassword", "User", null, new { @class = "btn btn-default col-md-offset-6" })
        </div>
    </div>




}

