@model TicketManagement.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout_Standard.cshtml";
}

<h2>My Account</h2>

@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h3>Change Password</h3>
        <hr />

        @Html.ValidationSummary("", new { @class = "text-danger" })

    @*Form Elements*@
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new {@class = "col-md-4 control-label"})
            <div class="col-md-6">
                @Html.PasswordFor(m => m.OldPassword, new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new {@class = "col-md-4 control-label"})
            <div class="col-md-6">
                @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-4 control-label"})
            <div class="col-md-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
            </div>
        </div>

    @*Form Buttons*@
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Change Password" class="btn btn-primary"/>
                @Html.ActionLink("Cancel", "Index", "User", null, new {@class = "btn btn-default"})
            </div>
        </div>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}