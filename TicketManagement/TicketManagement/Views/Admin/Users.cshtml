@model IEnumerable<TicketManagement.Models.Entities.ApplicationUser>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout_Standard.cshtml";
}

<h2>Users</h2>
<hr/>

<table class="table table-hover table-striped table-responsive">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserExtra.Team.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserExtra.IsTeamLeader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserExtra.IsArchived)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserExtra.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserExtra.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @if (item.UserExtra.Team == null)
            {
                <td>--</td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.UserExtra.Team.Name)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.UserExtra.IsTeamLeader)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserExtra.IsArchived)
            </td>
           <td>
               <a href="@Url.Action("Edit", new {id = item.Id})"><i class="fa fa-pencil"></i></a> |
               <a href="@Url.Action("Delete", new {id = item.Id})"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-default" })
</p>
