@using TicketManagement.Models.Management
@model TicketManagement.ViewModels.NotificationViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Standard.cshtml";
}

@if (Request.Params["ViewMessage"] == "AppliedRoleFromNotification")
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Success</b> The Notification has been handled and the role has been applied.
    </div>
}

@if (Request.Params["ViewMessage"] == "FailedToApplyRoleFromNotification" || Request.Params["ViewMessage"] == "FailedToDeclineRoleFromNotification")
{
    <div class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Error</b> An error occurred when trying to handle the Notification.
    </div>
}

@if (Request.Params["ViewMessage"] == "DeclinedRoleFromNotification")
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Success</b> The Notification has been dismissed.
    </div>
}

<h2>Notifications</h2>
<hr />

<h4>For You</h4>
<hr/>

@if (Model.UserNotifications.Any())
{
    <table class="table table-hover table-striped table-responsive">
        <tr>
            <th>Id</th>
            <th>Notification About</th>
            <th>Type</th>
            <th>Message</th>
            <th>Authorise</th>
            <th>Decline</th>
        </tr>

        @foreach (var notification in Model.UserNotifications)
        {
            @Html.HiddenFor(modelItem => notification.NotificationAbout)

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => notification.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => notification.NotificationAbout.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => notification.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => notification.Message)
                </td>
                <td>
                    <a href="@Url.Action("AuthoriseNotification", new {notificationId = notification.Id, notificationCategory = NotificationCategory.User})" class="btn btn-success"><i class="fa fa-check"></i></a>
                </td>
                <td>
                    <a href="@Url.Action("DeclineNotification", new {notificationId = notification.Id, notificationCategory = NotificationCategory.User})" class="btn btn-danger"><i class="fa fa-times"></i></a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>You have no notifications!</p>
    <br/>
}

<h4>For the Roles you are in</h4>
<hr />

@if (Model.RoleNotifications.Any())
{
    <table class="table table-hover table-striped table-responsive">
        <tr>
            <th>Id</th>
            <th>Associated Role</th>
            <th>Notification About</th>
            <th>Type</th>
            <th>Message</th>
            <th>Authorise</th>
            <th>Decline</th>
        </tr>

        @foreach (var notification in Model.RoleNotifications)
        {

            @Html.HiddenFor(modelItem => notification.NotificationAbout)
            @Html.HiddenFor(modelItem => notification.Role)

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => notification.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => notification.Role.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => notification.NotificationAbout.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => notification.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => notification.Message)
                </td>
                <td>
                    <a href="@Url.Action("AuthoriseNotification", new {notificationId = notification.Id, notificationCategory = NotificationCategory.Role})" class="btn btn-success"><i class="fa fa-check"></i></a>
                </td>
                <td>
                    <a href="@Url.Action("DeclineNotification", new {notificationId = notification.Id, notificationCategory = NotificationCategory.Role })" class="btn btn-danger"><i class="fa fa-times"></i></a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>You have no notifications for any of your roles!</p>
}

@using (Html.BeginForm("Test", "Notification", FormMethod.Post))
{
    <!-- form goes here -->

    <input type="submit" value="Test" />
}
