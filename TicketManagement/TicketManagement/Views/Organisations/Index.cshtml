@model IEnumerable<TicketManagement.Models.Entities.Organisation>

@{
    ViewBag.Title = "Organisations";
    Layout = "~/Views/Shared/_Layout_Standard.cshtml";
}

@if (Request.Params["ViewMessage"] == "OrganisationAdded")
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Success</b> The organisation has been added.
    </div>
}

@if (Request.Params["ViewMessage"] == "OrganisationUpdated")
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Success</b> The organisation has been updated.
    </div>
}

@if (Request.Params["ViewMessage"] == "OrganisationDeleted")
{
    <div class="alert alert-warning alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Success</b> The organisation has been deleted.
    </div>
}

<h2>Organisations</h2>
<hr/>

<table class="table table-hover table-striped table-responsive">
    <tr>
        <th>Default Contact</th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInternal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdated)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var organisation in Model)
    {
        <tr>
            @if (organisation.DefaultContact == null)
            {
                <td>--</td>
            }
            else
            {
                <td>@organisation.DefaultContact.FullName</td>
            }
            <td>
                @Html.DisplayFor(modelItem => organisation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => organisation.IsInternal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => organisation.LastUpdated)
            </td>
            <td>
                <a href="@Url.Action("Edit", new {id = organisation.Id})"><i class="fa fa-pencil"></i></a> |
                <a href="@Url.Action("Details", new {id = organisation.Id})"><i class="fa fa-info-circle"></i></a> |
                <a href="@Url.Action("Delete", new {id = organisation.Id})"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>


