@using TicketManagement.Models.Management

@{
    ViewBag.Title = "Text Messages";
    Layout = "~/Views/Shared/_Layout_Standard.cshtml";
}

@if (ViewBag.TextResult == TextResult.SendSuccess)
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        Message has sent! Remaining balance is @ViewBag.RemainingBalance
    </div>
}

@if (ViewBag.TextResult == TextResult.SendFailure)
{
    <div class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        Message sending has failed, error = @ViewBag.ErrorMessage
    </div>
}

<h2>Text Message Management</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Send Text Message</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Recipient", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("Id", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Message", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Message", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("Message", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" onclick="return confirm('Are you sure you want to send the message?')" />
            </div>
        </div>
    </div>
}