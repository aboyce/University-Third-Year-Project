@model List<TicketManagement.Models.Entities.SentTextMessage>

<div class="col-md-10">
    <h4>Sent Messages</h4>
    <br />
    <table class="table table-hover table-striped table-responsive">
        <tr>
            <th>Recipient</th>
            <th>Message</th>
            <th>Sent</th>
            <th>DR</th>
        </tr>

        @foreach (var text in Model)
        {
            <tr>
                <td>
                    @if (text.UserTo != null)
                    {
                        @Html.DisplayFor(modelItem => text.UserTo.FullName)
                    }
                    else
                    {
                        @:Unknown
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => text.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => text.Sent)
                </td>
                @if (text.DeliveryStatus == "DELIVRD")
                {
                    <td><i class="fa fa-check"></i></td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
    </table>
</div>

