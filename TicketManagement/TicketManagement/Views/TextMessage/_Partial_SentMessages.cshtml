@model List<TicketManagement.Models.Entities.SentTextMessage>

<div class="col-md-10">
    <h4>Sent Messages</h4>
    <br />
    <table class="table table-hover table-striped table-responsive">
        <tr>
            <th>Recipient</th>
            <th>Message</th>
            <th>Sent</th>
            <th>DR</th>
        </tr>

        @foreach (var text in Model)
        {
            <tr>
                <td>
                    @if (text.UserTo != null)
                    {
                        @Html.DisplayFor(modelItem => text.UserTo.FullName)
                    }
                    else
                    {
                        @:Unknown
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => text.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => text.Sent)
                </td>
                @switch (text.DeliveryStatus)
                {
                    case "DELIVRD":
                        <td><i class="fa fa-check"></i></td>
                        break;
                    case "QUEUED":
                    case "ENROUTE":
                        <td><i class="fa fa-arrow-circle-o-right"></i></td>
                        break;
                    case "EXPIRED":
                    case "DELETED":
                    case "UNDELIV":
                    case "REJECTD":
                        <td><i class="fa fa-times"></i></td>
                        break;
                    default:
                        <td></td>
                        break;
                }
            </tr>
        }
    </table>
</div>

