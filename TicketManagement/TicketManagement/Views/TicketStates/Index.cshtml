@model IEnumerable<TicketManagement.Models.Entities.TicketState>

@{
    ViewBag.Title = "Ticket States";
    Layout = "~/Views/Shared/_Layout_Standard.cshtml";
}

@if (Request.Params["ViewMessage"] == "TicketStateAdded")
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Success</b> The ticket state has been added.
    </div>
}

@if (Request.Params["ViewMessage"] == "TicketStateUpdated")
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Success</b> The ticket state has been updated.
    </div>
}

@if (Request.Params["ViewMessage"] == "TicketStateDeleted")
{
    <div class="alert alert-warning alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Success</b> The ticket state has been deleted.
    </div>
}

<h2>Ticket States</h2>
<hr/>

<table class="table table-hover table-striped table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdated)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                <a href="@Url.Action("Edit", new {id = item.Id})"><i class="fa fa-pencil"></i></a> |
                <a href="@Url.Action("Details", new {id = item.Id})"><i class="fa fa-info-circle"></i></a> |
                <a href="@Url.Action("Delete", new {id = item.Id})"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
