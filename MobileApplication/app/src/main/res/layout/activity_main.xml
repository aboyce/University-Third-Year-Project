<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ts.ticketmanagement.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAIN"
        android:id="@+id/lblMain"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prbMainActivity"
        android:layout_alignTop="@+id/lblMain"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection"
        android:id="@+id/chkConnection"
        android:enabled="true"
        android:focusable="true"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/lblMain"
        android:layout_toEndOf="@+id/lblMain" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Authorised"
        android:id="@+id/chkAccountAuthorised"
        android:enabled="true"
        android:focusable="false"
        android:layout_alignTop="@+id/chkConnection"
        android:layout_alignEnd="@+id/btnReEnterCredentials" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Connection"
        android:id="@+id/btnCheckConnection"
        android:onClick="checkConnectionOnClick"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/chkConnection"
        android:layout_toStartOf="@+id/chkAccountAuthorised" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authorise"
        android:id="@+id/btnAuthorise"
        android:onClick="authoriseOnClick"
        android:layout_alignTop="@+id/btnCheckConnection"
        android:layout_alignEnd="@+id/chkAccountAuthorised" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username: "
        android:id="@+id/lblUsername"
        android:layout_below="@+id/btnCheckConnection"
        android:layout_alignStart="@+id/lblMain"
        android:layout_marginTop="64dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re/Enter Credentials"
        android:id="@+id/btnReEnterCredentials"
        android:onClick="reEnterCredentialsOnClick"
        android:layout_below="@+id/lblUsernameValue"
        android:layout_alignStart="@+id/lblUsernameValue"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/main_lbl_usernameValue"
        android:id="@+id/lblUsernameValue"
        android:enabled="true"
        android:layout_alignBottom="@+id/lblUsername"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/chkConnection" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove User"
        android:id="@+id/btnRemoveUser"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/lblUsernameValue"
        android:onClick="removeUserOnClick" />

</RelativeLayout>
