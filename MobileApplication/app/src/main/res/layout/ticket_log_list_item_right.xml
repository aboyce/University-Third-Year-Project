<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticket_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:background="@drawable/ticket_list_item_border_default">-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Log Creator"
        android:id="@+id/ticketLogList_lblLogCreator"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentEnd="true"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log Message"
        android:id="@+id/ticketLogList_lblLogMessage"
        android:layout_below="@+id/ticketLogList_lblLogCreator"
        android:layout_alignStart="@+id/ticketLogList_lblLogCreator"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:gravity="right"
        android:textStyle="italic"
        android:layout_alignEnd="@+id/ticketLogList_lblLogCreator" />

</RelativeLayout>
